int main()
{
	double h = 0.1;
	double a = 0.05;
	double b = 0.095;
	double eps; cin >> eps;
	for (double x = 0.05; x - b <= eps; x += h)
	{
		long c = 3;
		long proiz = c;
		long step = x;
		long count = 0;
		double sum = 1;
		while (step / proiz - eps > 0)
		{
			sum += (double)step / proiz;
			step *= x;
			c += 2;
			proiz *= c;
			count++;
		}
		cout << x << sum << count << endl;
	}
}
