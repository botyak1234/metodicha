#include <iostream>
#include <cmath>
#include <iomanip>
#include <windows.h>
#include <algorithm>
#include <vector>
#include <string>
#include <sstream>
#include <cstring>
#include <fstream>
#include <vector>

using namespace std;
struct Point {
    double x, y;
};

bool inSquare(const Point& p) 
{
    return p.x >= -5 && p.x <= 5 && p.y >= -5 && p.y <= 5;
}


bool below(const Point& p) 
{
    return p.y < 0;
}

bool inFourthQuadrant(const Point& p) 
{
    return p.x > 0 && p.y > 0;
}

bool distance(const Point& p1, const Point& p2)
{
    return sqrt(p1.x * p1.x + p1.y * p1.y < p2.x* p2.x + p2.y * p2.y);
}


int main()
{
    vector<Point> points = { {1, 2}, {3, 4}, {-6, 8}, {0, -3}, {4, -2} };
    
    points.erase(remove_if(points.begin(), points.end(), inSquare));

    int count = count_if(points.begin(), points.end(), below);

    auto maxPoint = max_element(points.begin(), points.end(), distance);

    sort(points.begin(), points.end(), distance);
}
