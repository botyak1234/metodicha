#include <iostream>
#include <cmath>
#include <iomanip>
#include <vector>
using namespace std;


int main()
{
	double sum = 0;
	int k;
	cin >> k;
	int step = 2;
	int fac = 1;
	for (int n = 1; n <= k; n++)
	{
		fac *= n;
		sum += step  * fac / (double)pow(n, 2);
		step *= 2;
	}
	cout << sum;
}
/*
ввод - 5
вывод - 186.933

ввод - 7
вывод - 14632.6

ввод - 8
вывод - 175913
*/
